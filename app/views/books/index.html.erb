    <% @books.each do |book| %>
    <tr>
        <td><%= book.title %></td>
        <td><%= book.page %></td>
        <td><%= book.description %></td>
        <td><%= book.status %></td>        
        <td><%= link_to 'SHOW', book_path(book) %> | 
          <%= link_to 'EDIT', edit_book_path(book)%> | 
          <%= link_to  "DELETE", {controller:'books', action:'destroy', id: book.id}, method: :delete %> |
          <%= link_to  "Non Active", toggle_book_path(book), method: :patch %>
        </td>
    </tr>
    <% end %>
